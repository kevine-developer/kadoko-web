---
import LegalLayout from "../layouts/LegalLayout.astro";
import { LEGAL_CONTENT } from "../const/legal-data";

const content = LEGAL_CONTENT.cgu;
const title = `Conditions Générales<br/> <span class="italic text-coolgrey">d'Utilisation.</span>`;
const description = "Conditions générales d'utilisation de l'application et du site Kadô-Kou.";
const lastUpdated = "12 Février 2026";
---

<LegalLayout 
  title={title} 
  description={description} 
  subtitle="Contrat d'Usage"
  lastUpdated={lastUpdated}
>
  {content.sections.map((section, idx) => (
    <section class="mb-16">
        <h2 id={`section-${idx}`}>
          <span class="text-xs font-bold text-brushedgold/40 tracking-[0.3em] mr-4">{String(idx + 1).padStart(2, '0')}</span>
          {section.title}
        </h2>
        <p>
          {section.body}
        </p>
    </section>
  ))}
</LegalLayout>

