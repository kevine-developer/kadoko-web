---
import SEOHead from "../components/SEOHead.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const { title, description, image, noindex } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <SEOHead
      title={title}
      description={description}
      image={image}
      noindex={noindex}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <ClientRouter />
  </head>
  <body class="min-h-screen selection:bg-brushedgold selection:text-white">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-100 focus:px-6 focus:py-3 focus:bg-white focus:text-brushedgold focus:border focus:border-brushedgold focus:shadow-xl transition-all">
      Passer au contenu principal
    </a>
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
