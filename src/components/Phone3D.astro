---
import { LINK_APP_ANDROID } from "../const/constant";
import { Image } from "astro:assets";

interface Props {
  logoSrc?: string | any;
  className?: string;
  downloadUrl?: string;
}

const { logoSrc, className = "", downloadUrl = LINK_APP_ANDROID } = Astro.props;
---

<div class={`phone-wrapper ${className}`}>
  <!-- Ombre portée douce -->
  <div class="phone-shadow"></div>

  <!-- Le téléphone -->
  <div class="phone-case">
    <!-- Boutons Latéraux -->
    <div class="btn volume-up"></div>
    <div class="btn volume-down"></div>
    <div class="btn power"></div>

    <!-- Écran -->
    <div class="screen">
      <!-- Dynamic Island -->
      <div class="notch-container">
        <div class="notch"></div>
      </div>

      <!-- Barre de statut -->
      <div class="status-bar">
        <span>9:41</span>
        <div class="icons">
          <svg width="16" height="12" viewBox="0 0 16 12" fill="currentColor"
            ><path
              d="M14 9.5a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-7a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v7zM15 5.5v3h1v-3h-1z"
            ></path></svg
          >
        </div>
      </div>

      <!-- Contenu : Wallpaper Abstrait Luxe -->
      <div class="wallpaper">
        <div class="glow-1"></div>
        <div class="glow-2"></div>
      </div>

      <!-- Grille d'applications -->
      <div class="app-grid">
        <!-- L'application principale -->
        <a href={downloadUrl} target="_blank" class="app-item group">
          <div class="app-icon main">
            <Image
              src={logoSrc}
              alt="Kadô-Kou"
              width={64}
              height={64}
              class="icon-img"
            />
          </div>
          <span class="app-name">Kadô-Kou</span>
        </a>
      </div>

      <!-- Dock (Verre Dépoli) -->
      <div class="dock">
        <div class="dock-icon"></div>
        <div class="dock-icon"></div>
        <div class="dock-icon"></div>
      </div>

      <!-- Barre de geste -->
      <div class="home-indicator"></div>

      <!-- Reflet verre (Glass effect) -->
      <div class="glass-reflection"></div>
    </div>
  </div>
</div>

<style>
  /* Conteneur principal */
  .phone-wrapper {
    position: relative;
    width: 300px;
    height: 600px;
    display: flex;
    justify-content: center;
    margin: 0 auto;
    /* Animation de flottement très lente et subtile */
    animation: gentle-float 6s ease-in-out infinite;
  }

  /* Le Boîtier (Case) */
  .phone-case {
    width: 100%;
    height: 100%;
    background: #1c1c1e; /* Noir Titane */
    border-radius: 55px;
    padding: 12px; /* Épaisseur des bords */
    box-shadow:
      inset 0 0 0 2px #3a3a3c,
      /* Reflet métal */ 0 0 0 1px #000; /* Contour net */
    position: relative;
    z-index: 2;
  }

  /* Ombre portée au sol */
  .phone-shadow {
    position: absolute;
    bottom: -20px;
    left: 10%;
    width: 80%;
    height: 20px;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 0, 0, 0.3) 0%,
      transparent 70%
    );
    z-index: 1;
    animation: shadow-scale 6s ease-in-out infinite;
  }

  /* Boutons Physiques */
  .btn {
    position: absolute;
    background: #2c2c2e;
    border-radius: 4px;
    width: 4px;
  }
  .volume-up {
    left: -4px;
    top: 120px;
    height: 50px;
  }
  .volume-down {
    left: -4px;
    top: 185px;
    height: 50px;
  }
  .power {
    right: -4px;
    top: 140px;
    height: 80px;
  }

  /* L'Écran */
  .screen {
    width: 100%;
    height: 100%;
    background: #000;
    border-radius: 44px;
    position: relative;
    overflow: hidden;
    /* Bordure noire interne de l'écran */
    box-shadow: 0 0 0 2px #000;
  }

  /* Wallpaper "Luxe" */
  .wallpaper {
    position: absolute;
    inset: 0;
    background: #111;
  }
  .glow-1 {
    position: absolute;
    top: -20%;
    right: -20%;
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      rgba(175, 144, 98, 0.4) 0%,
      transparent 70%
    ); /* Or Brossé */
    opacity: 0.6;
  }
  .glow-2 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 300px;
    height: 300px;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
  }

  /* UI Éléments */
  .notch-container {
    position: absolute;
    top: 15px;
    width: 100%;
    display: flex;
    justify-content: center;
    z-index: 20;
  }
  .notch {
    width: 90px;
    height: 28px;
    background: #000;
    border-radius: 20px;
  }

  .status-bar {
    position: absolute;
    top: 18px;
    width: 100%;
    padding: 0 28px;
    display: flex;
    justify-content: space-between;
    font-family: -apple-system, sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #fff;
    z-index: 10;
  }

  .app-grid {
    position: absolute;
    top: 100px;
    width: 100%;
    display: flex;
    justify-content: center;
    z-index: 10;
  }

  .app-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    text-decoration: none;
    transition: transform 0.2s ease;
  }
  .app-item:hover {
    transform: scale(1.05);
  }

  .app-icon {
    width: 64px;
    height: 64px;
    background: #333;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  }
  .app-icon.main {
    box-shadow: 0 10px 25px rgba(175, 144, 98, 0.2); /* Ombre dorée subtile */
  }

  .icon-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .app-name {
    color: #fff;
    font-family: -apple-system, sans-serif;
    font-size: 11px;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  /* Dock */
  .dock {
    position: absolute;
    bottom: 24px;
    left: 10px;
    right: 10px;
    height: 55px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    z-index: 10;
  }

  .dock-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 14px;
  }

  .home-indicator {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 4px;
    background: #fff;
    border-radius: 2px;
    z-index: 20;
  }

  /* Reflet Vitré (Gloss) */
  .glass-reflection {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 40%,
      transparent 100%
    );
    pointer-events: none;
    z-index: 50;
  }

  /* Animations */
  @keyframes gentle-float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes shadow-scale {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(0.8);
      opacity: 0.1;
    }
  }

  /* Media Queries */
  @media (max-width: 768px) {
    .phone-wrapper {
      width: 260px;
      height: 520px;
    }
  }
</style>
